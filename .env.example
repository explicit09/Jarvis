# LiveKit Configuration
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_api_key
LIVEKIT_API_SECRET=your_api_secret

# Speech-to-Text
DEEPGRAM_API_KEY=your_deepgram_key

# Text-to-Speech (ElevenLabs)
ELEVENLABS_API_KEY=your_elevenlabs_key

# LLM Providers (at least one required)
ANTHROPIC_API_KEY=your_anthropic_key
OPENAI_API_KEY=your_openai_key
LLM_AUTO_MODE=latency
LLM_LATENCY_PROBE=false
LLM_LATENCY_TIMEOUT_S=4.0

# Wake Word Detection (optional - for standalone mode)
PICOVOICE_ACCESS_KEY=your_picovoice_key
JARVIS_WAKE_WORDS=jarvis
JARVIS_WAKE_SENSITIVITY=0.5

# Optional: Model Configuration
WHISPER_MODEL=base.en
CLAUDE_MODEL=claude-sonnet-4-20250514
OPENAI_MODEL=gpt-4o-mini
ELEVENLABS_VOICE_ID=JBFqnCBsd6RMkjVDRZzb

# Optional: Storage and Safety
JARVIS_DATA_DIR=~/.jarvis
JARVIS_ALLOWED_COMMANDS=ls,pwd,whoami,date,uptime
JARVIS_ALLOWED_PATHS=~/Documents,~/Desktop
JARVIS_REQUIRE_CONFIRMATION=true
JARVIS_TIMEZONE=local
JARVIS_WEATHER_CITY=
JARVIS_BRIEF_DAYS=7

# Optional: Twilio (calling + SMS)
TWILIO_ACCOUNT_SID=your_sid
TWILIO_AUTH_TOKEN=your_token
TWILIO_FROM_NUMBER=+15551234567
TWILIO_DEFAULT_TO_NUMBER=

# Optional: Home Assistant
HOME_ASSISTANT_URL=https://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=your_token

# Optional: Outlook (Microsoft Graph)
MS_CLIENT_ID=your_client_id
MS_TENANT_ID=common
MS_CALENDAR_ID=

# Optional: GitHub (read-only)
GITHUB_TOKEN=your_fine_grained_token
GITHUB_ALLOWED_OWNERS=
GITHUB_ALLOWED_REPOS=

# Optional: UI
JARVIS_UI_TOKEN=change_me
JARVIS_UI_HOST=127.0.0.1
JARVIS_UI_PORT=8080
JARVIS_UI_ALLOW_REMOTE=false
